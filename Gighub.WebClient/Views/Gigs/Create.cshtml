@using Gighub.WebClient.ViewModels

@model GigViewModel
@{
    ViewBag.Title = "Create";
}

<h1>Add a Gig</h1>

<form asp-controller="Gigs" asp-action="Create" method="post">
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    <div class="form-group">
        <label asp-for="Venue"></label>
        <input asp-for="Venue" class="form-control" autofocus />
        <span asp-validation-for="Venue"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" placeholder="e.g. 1 Jan 2015" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" placeholder="e.g. 20:00"/>
        <span asp-validation-for="Time"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre" asp-items="@Model.Genres" class="form-control"></select>
        <span asp-validation-for="Genre"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-default" formmethod="get">Clear</button>
    </div>
</form>